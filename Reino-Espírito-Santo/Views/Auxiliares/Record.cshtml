@using Reino_Espírito_Santo.Models.Auxiliares
@model AuxiliarModel

<div>
    <h3>Auxiliares</h3>
    <form asp-controller="Auxiliares" asp-action="Save" method="post">
        <input type="hidden" asp-for="Id">
        <div class="form-group">
            <label>Nome</label>
            <input type="text" id="nome" class="form-control" asp-for="Nome" />
        </div>
        <div class="form-group">
            <label>Função</label>
            <input type="text" id="nome" class="form-control" asp-for="Funcao" />
        </div>
        <br />
        <button type="submit" class="btn btn-primary float-end">Salvar</button>
        <a type="button" style="margin-right:5px" class="btn btn-secondary float-end" asp-controller="Auxiliares" asp-action="Index">Voltar</a>
    </form>
</div>