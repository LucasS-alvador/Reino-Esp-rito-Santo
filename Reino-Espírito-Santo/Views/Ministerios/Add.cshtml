@model Reino_Espírito_Santo.Models.Missionarios.MissionarioModel

<div class="container mt-4">
    <h3 class="text-center">Adicionar Missionário</h3>
    <form asp-action="Add" asp-controller="Missionarios" method="post">
        <div class="form-group">
            <label for="Nome">Nome</label>
            <input type="text" id="Nome" name="Nome" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="Telefone">Telefone</label>
            <input type="text" id="Telefone" name="Telefone" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="AuxiliarId">Auxiliar</label>
            <select id="AuxiliarId" name="AuxiliarId" class="form-control" required>
                @foreach (var auxiliar in ViewBag.Auxiliares)
                {
                    <option value="@auxiliar.Id">@auxiliar.Nome</option>
                }
            </select>
        </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a href="@Url.Action("Index", "Missionarios")" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
