@model Reino_Espírito_Santo.Models.Ministerios.MinisterioModel

<div class="container mt-4">
    <h3 class="text-center">Editar Ministério</h3>
    <form asp-action="Salvar" asp-controller="Ministerios" method="post">
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="form-group">
            <label for="Nome">Nome</label>
            <input type="text" id="Nome" name="Nome" class="form-control" value="@Model.Nome" required />
        </div>
        <div class="form-group">
            <label for="Descricao">Descrição</label>
            <input type="text" id="Descricao" name="Descricao" class="form-control" value="@Model.Descricao" required />
        </div>
        <div class="form-group">
            <label for="AuxiliarId">Líder</label>
            <select class="form-control" id="AuxiliarId" name="AuxiliarId" asp-for="auxiliarId" asp-items="ViewBag.Auxiliares" required>
                <option value="Model.auxiliarNome"></option>
            </select>
        <div class="form-group">
            <label for="DataInicio">Data de Início</label>
            <input type="date" id="DataInicio" name="DataInicio" class="form-control" value="@Model.DataInicio.ToString("yyyy-MM-dd")" required />
        </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a href="@Url.Action("Index", "Ministerios")" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

