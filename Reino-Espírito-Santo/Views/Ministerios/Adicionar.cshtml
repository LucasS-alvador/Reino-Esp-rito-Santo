@model Reino_Espírito_Santo.Models.Ministerio.MinisterioModel

<h2>Adicionar Novo Ministério</h2>

<form asp-action="Adicionar" asp-controller="Ministerios" method="post">
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" id="Nome" name="Nome" asp-for="Nome" required />
    </div>
    <div class="form-group">
        <label for="Descricao">Descrição</label>
        <textarea class="form-control" id="Descricao" name="Descricao" asp-for="Descricao" required></textarea>
    </div>
    <div class="form-group">
        <label for="AuxiliarId">Líder</label>
        <select class="form-control" id="AuxiliarId" name="AuxiliarId" asp-for="auxiliarId" asp-items="ViewBag.Auxiliares" required>
            <option value="">Selecione um líder</option>
        </select>
    </div>
    <div class="form-group">
        <label for="DataInicio">Data de Início</label>
        <input type="date" class="form-control" id="DataInicio" name="DataInicio" asp-for="DataInicio" required />
    </div>
    <button type="submit" class="btn btn-primary">Adicionar</button>
</form>
