@using Reino_Espírito_Santo.Models.Dizimo
@model DizimoModel

<div class="container mt-5">
    <div class="row">

        <div class="col-md-8 d-flex flex-column align-items-center justify-content-between" style="height: 400px;">
            <h4 class="text-dark mb-4">Total</h4>
            <div class="p-4 rounded d-flex flex-column justify-content-center align-items-center" style="border-style: dotted; height: 100%; background-color:floralwhite;">
                <h1 class="text-center">@Model.Total.ToString("C")</h1>
            </div>
            <a type="button" class="btn btn-warning btn-lg mt-4" asp-controller="Dizimos" asp-action="Contribuir">Ofertar</a>
        </div>

        <div class="col-md-3" style="height: 200px; margin-top: 45px;">
            <h4 class="text-dark mb-4">Adicionado</h4>
            <div class="p-4 rounded d-flex flex-column justify-content-start" style="border-style: dotted; height: 100%; background-color:floralwhite;">
                <h2 class="text-start">@Model.Adicionado.ToString("C")</h2>

                @foreach (var item in Model.AdicionadosAntigos.Skip(1))
                {
                    <p class="text-success">+@item.ToString("C")</p>
                }
            </div>
        </div>
    </div>
</div>
