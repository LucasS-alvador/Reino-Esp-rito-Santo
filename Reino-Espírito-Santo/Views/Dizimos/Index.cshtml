@using Reino_Espírito_Santo.Models.Dizimo
@model DizimoModel

<h3 class="importante">Dizimos</h3>
<div class="container mt-5">
    <div class="row">

        <div class="col-md-8 d-flex flex-column align-items-center justify-content-between" style="height: 400px;">
            <h4 class="text-white mb-4">Total</h4>
            <div class="p-4 rounded d-flex flex-column justify-content-center align-items-center" style="border-style: dotted; height: 100%; background-color: #f8f9fa;">
                <h1 class="text-center">@Model.Total.ToString("C")</h1>
            </div>
            <a type="button" class="btn btn-warning btn-lg mt-4" asp-controller="Dizimos" asp-action="Contribuir">Ofertar</a>
        </div>

        <div class="col-md-3" style="height: 200px; margin-top: 45px;">
            <h4 class="text-white mb-4">Adicionado</h4>
            <div class="p-4 rounded d-flex flex-column justify-content-start" style="border-style: dotted; height: 100%; background-color: #f8f9fa;">
                <h2 class="text-start">@Model.Adicionado.ToString("C")</h2>

                @if (Model.AntigoAdd1 > 0 && Model.AntigoAdd1 != Model.Adicionado)
                {
                    <p class="text-success">+@Model.AntigoAdd1.ToString("C")</p>
                }
                @if (Model.AntigoAdd2 > 0 && Model.AntigoAdd2 != Model.Adicionado)
                {
                    <p class="text-success">+@Model.AntigoAdd2.ToString("C")</p>
                }
                @if (Model.AntigoAdd3 > 0 && Model.AntigoAdd3 != Model.Adicionado)
                {
                    <p class="text-success">+@Model.AntigoAdd3.ToString("C")</p>
                }
            </div>
        </div>

    </div>
</div>
