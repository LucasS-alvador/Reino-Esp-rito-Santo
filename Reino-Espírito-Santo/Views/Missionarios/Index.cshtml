@using Reino_Espírito_Santo.Models.Missionarios
@model MissionariosModel

<div class="container mt-4">
    <h3>Lista de Missionarios</h3>
    <table class="table table-striped table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var missionario in Model.Missionario)
            {
                <tr>
                    <td>@missionario.Id</td>
                    <td>@missionario.Nome</td>
                    <td>@missionario.Telefone</td>
                    <td>
                        <a href="@Url.Action("Record", "Missionarios", new { Id = missionario.Id })" class="btn btn-warning btn-sm">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
